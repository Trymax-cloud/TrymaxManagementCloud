{
  "appId": "com.trymaxfurnaces.trymaxmanagement",
  "productName": "TrymaxManagement",
  "copyright": "Copyright Â© 2026 Trymax Furnaces",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "publisherName": "Trymax Furnaces"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icon.icns",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon.png",
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "TrymaxManagement"
  },
  "publish": {
    "provider": "github",
    "owner": "Trymax-cloud",
    "repo": "TrymaxManagementCloud"
  }
}
